// Initial baseline ported from Adam Kaplan's http://www.adamkaplan.me/grid/

html
  font: 100%/1.5
  text-rendering: optimizeLegibility
  -webkit-font-smoothing antialiased

  @media (min-width 40rem)
    font-size: 112%

  @media (min-width 64rem)
    font-size: 120%

header
  font-size: 2em
  font-weight: 200

body
  font-size: 18px
  border: 10px
  padding: 10px
  margin: 10px
  -webkit-font-smoothing antialiased
  -webkit-overflow-scrolling touch

h1
  font-weight: 600
  font-size: 1.3rem
  line-height: 1.3em
  margin: 0
  margin-bottom: 1.5rem

  @media (min-width: 40rem)
    font-size: 1.5rem

h2
  font-weight: 500
  font-size: 1.3rem
  line-height: 1.3em
  margin: 0
  margin-bottom: 1.5rem

  @media (min-width: 40rem)
    font-size: 1.5rem

h3
  font-weight: 400
  font-size: 1.2rem
  text-transform: uppercase
  margin-bottom: .5rem

h4
  font-weight: 400
  font-size: 1.2rem
  text-transform: uppercase
  margin-bottom: .4rem

h5
  font-weight: 400
  font-size: 1.2rem
  margin-bottom: .3rem

h6
  font-weight: 100
  font-size: 1rem
  text-transform: uppercase
  margin-bottom: .2rem

p
  margin: 0 auto
  max-width: 30rem

blockquote
  margin: 0

  p
    font-style: italic
    margin-bottom: 1.5rem

cite
   margin-bottom: 1.5rem

code
  background-color: #f8f8f8
  border-radius(3px)
  border: 1px solid #ddd
  font-family: base_mono
  font-size: 0.8rem
  padding: 0.1rem 0.3rem
  position: relative
  top: -1px
  white-space: nowrap
